{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    },
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "incremental": true
  },
  "typeRoots": ["@types", "./node_modules/@types"]
}
